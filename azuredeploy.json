{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "Norway east",
      "metadata": {
        "description": "Azure region where resources will be deployed"
      }
    },
    "logAnalyticsWorkspaceName": {
      "type": "string",
      "defaultValue": "SentinelWorkspace",
      "metadata": {
        "description": "Name of the Log Analytics Workspace"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2021-06-01",
      "name": "[parameters('logAnalyticsWorkspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 90
      }
    },
    {
      "type": "Microsoft.OperationsManagement/solutions",
      "apiVersion": "2015-11-01-preview",
      "name": "[concat('SecurityInsights(', parameters('logAnalyticsWorkspaceName'), ')')]",
      "location": "[parameters('location')]",
      "properties": {
        "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]",
        "plan": {
          "name": "SecurityInsights",
          "product": "OMSGallery/SecurityInsights",
          "publisher": "Microsoft",
          "promotionCode": ""
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]"
      ]
    },
{
  "type": "Microsoft.SecurityInsights/dataConnectors",
  "apiVersion": "2022-11-01-preview",
  "name": "[guid(resourceGroup().id, 'EntraIDConnector')]",  
  "properties": {
    "dataTypes": {
      "SignInLogs": {
        "state": "enabled"
      },
      "AuditLogs": {
        "state": "enabled"
      }
    },
    "kind": "AzureActiveDirectory",
    "tenantId": "[subscription().tenantId]",
    "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]"
  },
  "dependsOn": [
    "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]",
    "[resourceId('Microsoft.OperationsManagement/solutions', concat('SecurityInsights(', parameters('logAnalyticsWorkspaceName'), ')'))]"
  ]
}
  ],
  "outputs": {}
}
